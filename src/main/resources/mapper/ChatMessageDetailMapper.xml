<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yy.my_tutor.chat.mapper.ChatMessageDetailMapper">

    <resultMap id="BaseResultMap" type="com.yy.my_tutor.chat.domain.ChatMessageDetail">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="user_id" property="userId" jdbcType="VARCHAR"/>
        <result column="sort" property="sort" jdbcType="INTEGER"/>
        <result column="type" property="type" jdbcType="VARCHAR"/>
        <result column="context" property="context" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="conversation_id" property="conversationId" jdbcType="VARCHAR"/>
        <result column="message_id" property="messageId" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, sort, type, context, create_time, conversation_id, message_id
    </sql>

    <insert id="insert" parameterType="com.yy.my_tutor.chat.domain.ChatMessageDetail">
        insert into chat_message_detail (
            user_id, sort, type, context, create_time, conversation_id, message_id
        ) values (
            #{userId}, #{sort}, #{type}, #{context}, #{createTime}, #{conversationId}, #{messageId}
        )
    </insert>

    <select id="findById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from chat_message_detail
        where id = #{id}
    </select>

    <select id="findByMessageId" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List"/>
        from chat_message_detail
        where message_id = #{messageId}
        order by sort asc, create_time asc
    </select>

    <select id="findByConversationId" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List"/>
        from chat_message_detail
        where conversation_id = #{conversationId}
        order by sort asc, create_time asc
    </select>

    <select id="findByUserId" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List"/>
        from chat_message_detail
        where user_id = #{userId}
        order by create_time desc
    </select>

    <select id="findByConversationIdAndSort" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from chat_message_detail
        where conversation_id = #{conversationId} and sort = #{sort}
        order by create_time asc
    </select>

    <update id="update" parameterType="com.yy.my_tutor.chat.domain.ChatMessageDetail">
        update chat_message_detail
        <set>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="type != null">type = #{type},</if>
            <if test="context != null">context = #{context},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="conversationId != null">conversation_id = #{conversationId},</if>
            <if test="messageId != null">message_id = #{messageId},</if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from chat_message_detail where id = #{id}
    </delete>

    <delete id="deleteByMessageId" parameterType="java.lang.String">
        delete from chat_message_detail where message_id = #{messageId}
    </delete>

    <delete id="deleteByConversationId" parameterType="java.lang.String">
        delete from chat_message_detail where conversation_id = #{conversationId}
    </delete>

    <select id="findAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from chat_message_detail
        order by create_time desc
    </select>

</mapper> 