<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yy.my_tutor.chat.mapper.ChatMessageMapper">

    <resultMap id="BaseResultMap" type="com.yy.my_tutor.chat.domain.ChatMessage">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="conversation_id" property="conversationId" jdbcType="VARCHAR"/>
        <result column="user_id" property="userId" jdbcType="VARCHAR"/>
        <result column="type" property="type" jdbcType="VARCHAR"/>
        <result column="context" property="context" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, conversation_id, user_id, type, context, create_time, title
    </sql>

    <insert id="insert" parameterType="com.yy.my_tutor.chat.domain.ChatMessage">
        insert into chat_message (
            conversation_id, user_id, type, context, create_time, title
        ) values (
            #{conversationId}, #{userId}, #{type}, #{context}, NOW(), #{title}
        )
    </insert>

    <select id="findById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from chat_message
        where id = #{id}
    </select>

    <select id="findByConversationId" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List"/>
        from chat_message
        where conversation_id = #{conversationId}
        order by create_time asc
    </select>

    <select id="findByUserId" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List"/>
        from chat_message
        where user_id = #{userId}
        order by create_time desc
    </select>

    <update id="update" parameterType="com.yy.my_tutor.chat.domain.ChatMessage">
        update chat_message
        <set>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="type != null">type = #{type},</if>
            <if test="context != null">context = #{context},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="title != null">title = #{title},</if>
        </set>
        where conversation_id = #{conversationId}
    </update>

    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from chat_message where id = #{id}
    </delete>

    <delete id="deleteByConversationId" parameterType="java.lang.String">
        delete from chat_message where conversation_id = #{conversationId}
    </delete>

    <select id="findAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from chat_message
        order by create_time desc
    </select>

</mapper>
